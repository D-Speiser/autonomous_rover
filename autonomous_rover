#include <Servo.h> 

Servo servo;
const int servoPin = 10;

void sweep() { 
  int pos = 0;
  for(pos = 0; pos <= 180; pos += 10) {
    servo.write(pos);
    delay(100);
  }
  for(pos = 180; pos >= 0; pos -= 10) {
    servo.write(pos);
    delay(100);
  } 
}

void setup() {
  Serial.begin(9600);
  servo.attach(servoPin);
}

void loop() {
	sweep();
}
